<!-- bottom_sheet_add_card.xml -->
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/LavenderBlu"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/LavenderBlu"
        android:padding="16dp">


        <!-- EditText for Card Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Type">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_type_edit_text"
                android:layout_width="match_parent"
                android:background="@drawable/addcrd"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Card Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_number_edit_text"
                android:layout_width="match_parent"
                android:background="@drawable/addcrd"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Expiry Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiry Date (MM/YYYY)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/expiry_date_edit_text"
                android:layout_width="match_parent"
                android:background="@drawable/addcrd"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for CVV Code -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVV Code">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cvv_code_edit_text"
                android:background="@drawable/addcrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Country/Currency -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country/Currency">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/country_currency_edit_text"
                android:background="@drawable/addcrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button to confirm adding card -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/addcrd"
            android:text="Add Card" />





    </LinearLayout>

</com.google.android.material.circularreveal.cardview.CircularRevealCardView>
